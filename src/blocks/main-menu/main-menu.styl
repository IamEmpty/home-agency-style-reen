.main-menu
  padding 11px 0 10px

  &__item
    list-style none
    text-transform uppercase
    display block
    font-family 'Source Sans Pro', sans-serif
    font-size 15px
    font-weight 700
    text-decoration none
    @media (min-width 576px)
      display inline-block
      padding 0 22px 0
      &:first-child
        padding 0 22px 0 0
      &:last-child
        padding 0 0 0 22px

  &__link
    color #506a85
    font-family 'Source Sans Pro', sans-serif
